// Table 8 stuff
struct Table8CH_SD
{
    uint32_t prev[8];
    // Stale value guard
    uint8_t bActive;
};
#define NUM_INPUT_CHANNELS 8
Table8CH_SD tSD[NUM_INPUT_CHANNELS];


